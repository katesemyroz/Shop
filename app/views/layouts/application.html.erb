<!DOCTYPE html>
<html>
  <head>
    <title>Shop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container" style="padding-top: 50px">
      <%= render "layouts/main" %>

      <%if notice%>
        <p id="notice" style="padding: 25px; background-color: green; color: white;">
          <%= notice %>
        </p>
      <%end%>
      <%= yield %>
    </div>
  </body>
</html>
